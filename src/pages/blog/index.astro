---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { 
	SITE_TITLE, 
	SITE_DESCRIPTION, 
	HIGHLIGHTED_POSTS 
} from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const topPosts = posts.slice(0, HIGHLIGHTED_POSTS);
const otherPosts = posts.slice(HIGHLIGHTED_POSTS);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul.highlighted-posts {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul.highlighted-posts li {
				width: calc(50% - 1rem);
			}
			ul.highlighted-posts li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul.highlighted-posts li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul.highlighted-posts li:first-child img {
				width: 100%;
			}
			ul.highlighted-posts li:first-child .title {
				font-size: 2.369rem;
			}
			ul.highlighted-posts li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul.highlighted-posts li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul.highlighted-posts li a:hover h4,
			ul.highlighted-posts li a:hover .date {
				color: rgb(var(--accent));
			}
			ul.highlighted-posts a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul.highlighted-posts {
					gap: 0.5em;
				}
				ul.highlighted-posts li {
					width: 100%;
					text-align: center;
				}
				ul.highlighted-posts li:first-child {
					margin-bottom: 0;
				}
				ul.highlighted-posts li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul class="highlighted-posts">
					{
						topPosts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<Image width={720} height={360} src={post.data.heroImage ?? ''} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
			{!!otherPosts.length && (
				<section class="mt-8">
					<p class="text-3xl text-gray-500">üóÑÔ∏è more posts</p>
					<ul>
						{
							otherPosts.map((post) => (
								<li>
									<a href={`/blog/${post.id}/`}>
										{post.data.title} <span class="date text-xs"><FormattedDate date={post.data.pubDate} /></span>
									</a>
								</li>
							))
						}
					</ul>
				</section>
			)}
		</main>
		<Footer />
	</body>
</html>
